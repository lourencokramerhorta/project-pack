<form action="/user/{{user.id}}/edit" method="post" enctype="multipart/form-data">
  <div class="d-flex flex-column bd-highlight mb-3 pt-5">
    <div class="p-2 bd-highlight align-self-center">
      <label for=" username">Username:</label><br>
      <input type="text" id="username" name="username" value="{{user.username}}">
    </div>

    <div class="p-2 bd-highlight align-self-center">
      <label for="photo-input">Photo:</label>
      <input type="file" name="photo" id="photo-input" class="form-control-file" />
      <input type="text" name="currentPhoto" hidden id="" value="{{user.photo}}">
    </div>

    <div class="p-2 bd-highlight align-self-center">
      <label>Address</label>
      <input type="text" name="latitude" placeholder="latitude">
      <input type="text" name="longitude" placeholder="longitude">
    </div>

    <button type="submit" class="btn btn-warning align-self-center">Create</button>

  </div>
</form>