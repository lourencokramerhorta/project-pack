<div id="signup">
  <div class="d-flex justify-content-center py-3">
    <img src="images/doggologo.png" alt="login image" style="width: 400px;">
  </div>
  <form action="/signup" method="POST" class="px-5">
    <div class="container-fluid">
      <div class="row d-flex flex-column flex-md-row justify-content-around">
        <div class="form-group col-md-4 p-2">
          <input type="text" class="form-control shadow rounded" id="input-username" name="username"
            placeholder="username">
        </div>

        <div class="form-group col-md-4 p-2">
          <input type="password" class="form-control shadow rounded" id="input-password" name="password"
            placeholder="********">
        </div>

        <div class="form-group col-md-4 p-2">
          <input type="email" class="form-control shadow rounded" id="input-email" name="email"
            placeholder="example@example.com">
        </div>

      </div>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <button type="submit" class="btn btn-warning" style="width: 250px;">Create account</button>
    </div>
  </form>
  {{#if errorMessage}}
    <div class="alert alert-danger m-5 text-center" role="alert">{{errorMessage}}</div>
  {{/if}}
</div>