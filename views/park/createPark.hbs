<div>
<div id='map' style='height:300px'></div>

<div class='create-park-div'>
  <h2>Create park</h2>
  
  <form action="/parks/create-park" method="POST" enctype="multipart/form-data">
    
    <div class="container-fluid">
    
    <div class="row d-flex flex-column flex-md-row justify-content-start">
    
    <div class="form-group col-md-3 p-1">
    <label for="input-name">Name:</label>
    <input class="form-control" type="text" id="input-name" name="name"/><br>
    </div>

    <div class="form-group col-md-5 p-1">
    <label>Address:</label>
    <input type="text" class="form-control" name="address" id="address" placeholder="address" value="{{address}}"/>
    <input id="submit" type="button" value="Geocode" />
    <input type="hidden" name="latitude"  id="latitude" placeholder="latitude" value="{{lat}}"/><br>
    <input type="hidden" name="longitude" id="longitude" placeholder="longitude" value="{{lng}}"/><br>
    </div>

    <div class="form-group col-md-4 p-1">
    <label for="input-photo">Photo:</label>
    <input type="file" class="form-control" id="input-photo" name="photo"/><br>
    </div>
    </div>

    <div class="row d-flex flex-column flex-md-row justify-content-start">

    <div class="form-check col-md-1 p-1">
    <label for="input-water">Water?</label>
    <input type="checkbox" class="form-check-input" id="input-water" name="water" value="true"/>
    </div>

    <div class="form-check col-md-1 p-1">
    <label for="input-playObj">Play?</label>
    <input type="checkbox" class="form-check-input" id="input-playObj" name="playObj" value="true"/>
    </div>

    <div class="form-check col-md-2 p-1">
    <label for="input-poopBags">Poop Bags?</label>
    <input type="checkbox" class="form-check-input" id="input-poopBags" name="poopBags" value="true"/>
    </div>

    <div class="form-check col-md-1 p-1">
    <label for="input-cafe">Cafe?</label>
    <input type="checkbox" class="form-check-input" id="input-cafe" name="cafe" value="true"/>
    </div>
    
    <div class="form-group col-md-2 p-1">
    <label for="input-crowded">Crowded?</label>
    <select name="crowded" class="form-select" id="input-crowded">
      <option value="Never">Never</option>
      <option value="Sometimes">Sometimes</option>
      <option value="Always">Always</option>
    </select><br>
    </div>

    <div class="form-group col-md-2 p-1">  
    <label for="input-ground">Ground type:</label>
    <select name="ground" class="form-select" id="size">
      <option value="Muddy">Muddy</option>
      <option value="Sand">Sand</option>
      <option value="Grass">Grass</option>
      <option value="Stones">Stones</option>
    </select><br>
    </div>

    <div class="form-group col-md-2 p-1">
    <label for="input-size">Park size:</label>
    <select name="size" class="form-select" id="size">
      <option value="Small">Small</option>
      <option value="Medium">Medium</option>
      <option value="Large">Large</option>
    </select><br>
    </div>

    </div>

    <button class='btn btn-warning shadow rounded' type="submit" id="create-park-submit">Create park</button>

  </form>
  </div>
</div>
</div>