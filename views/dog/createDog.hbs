<div id="create-dog">

  <form action="/create-dog" method="POST" enctype="multipart/form-data">
    <div class="d-flex flex-column bd-highlight mb-3 pt-5">


      <div class="p-2 bd-highlight align-self-center">
        <input type="text" class="form-control" id="searchFormName" name="name" placeholder="Dog name">
      </div>

      <div class="p-2 bd-highlight align-self-center">
        <label for="searchFormSize">Choose a size:</label>
        <select class="form-control" id="searchFormSize" name="size">
          <option value="small">Small</option>
          <option value="medium">Medium</option>
          <option value="large">Large</option>
        </select>
      </div>

      <div class="p-2 bd-highlight align-self-center">
        <label for="searchFormSex">Choose a sex:</label>
        <select class="form-control" id="searchFormSex" name="sex">
          <option value="Male">Male</option>
          <option value="Female">Female</option>
        </select>
      </div>


      <div class="p-2 bd-highlight align-self-center">
        <label for="input-photo">Photo</label>
        <input type="file" id="input-photo" name="photo" placeholder="Dog photo" /><br>
      </div>

      <div class="p-2 bd-highlight align-self-center">
        <label>age:</label>
        <input type="number" name="age" value="0">
      </div>

      <div class="p-2 bd-highlight align-self-center">
        <label for="searchFormBreed">Choose a breed:</label>
        <select class="form-control" id="searchFormBreed" name="breed">
          <option value="Labrador">Labrador</option>
          <option value="German Shepherd Dog">German Shepherd Dog</option>
          <option value="Retriever">Retriever</option>
          <option value="French Bulldog">French Bulldog</option>
          <option value="Bulldog">Bulldog</option>
          <option value="Poodle">Poodle</option>
          <option value="Beagle">Beagle</option>
          <option value="Rottweiler">Rottweiler</option>
          <option value="German Shorthaired">German Shorthaired</option>
          <option value="Pembroke Welsh Corgi">Pembroke Welsh Corgi</option>
        </select>
      </div>

      <div class="p-2 bd-highlight align-self-center">
        <label>Address</label>
        <input type="text" name="latitude" placeholder="latitude">
        <input type="text" name="longitude" placeholder="longitude">
      </div>

      <div class="p-2 bd-highlight align-self-center">
        <label class="form-check-label" for="sterilized">
          Sterilized
        </label>
        <input class="form-check-input" type="checkbox" value="true" id="sterilized" name="sterilized">
      </div>

      <button type="submit" class="btn btn-warning align-self-center">Create</button>
    </div>

</div>
</form>
</div>








